	
<aside ng-controller='UserController as userCtrl'>
	
	<div ng-hide='userCtrl.loggenIn()'>
		<form role="form" novalidate name="userForm">
			<div>
				<label for="email">Email</label>
				<input type="text" name="email" ng-model="userCtrl.email" required />
			</div>
			<div>
				<label for="password">Password</label>
				<input type="text" name="password" ng-model="userCtrl.password" required />
			</div>
			<div class="pull-right">
				<button class="btn btn-primary" ng-click="userCtrl.login()" ng-disabled="!userForm.$valid">Log In</button>
			</div>
		</form>
	</div>

	<div ng-show='userCtrl.loggedIn()'>
		<button ng-click="userCtrl.logOut()">Log Out</button>
	</div>

</aside>
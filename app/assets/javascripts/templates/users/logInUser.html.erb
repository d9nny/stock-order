<section class="center">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="page-header intro">
        <h2>Log In</h2>
      </div>
      <form role="form" novalidate name="userForm">
        <div class="form-group" ng-class="{'has-error': !userForm.email.$valid}">
          <label for="email">Email</label>
          <input type="text" name="email" ng-model="userCtrl.email" class="form-control" required />
        </div>
        <div class="form-group" ng-class="{'has-error': !userForm.password.$valid}">
          <label for="password">Password</label>
          <input type="text" name="password" ng-model="userCtrl.password" class="form-control" required />
        </div>
        <div class="actions">
          <a ng-href="#users" class="btn btn-default">Back</a>
          <div class="pull-right">
            <button class="btn btn-primary" ng-click="userCtrl.login()" ng-disabled="!userForm.$valid">Log In</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

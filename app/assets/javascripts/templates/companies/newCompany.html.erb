<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <div class="page-header intro">
      <h2>New Company</h2>
    </div>
    <form role="form" novalidate name="companyForm">
      <div class="form-group" ng-class="{'has-error': !companyForm.name.$valid}">
        <label for="name">Name</label>
        <input type="text" name="name" ng-model="compCtrl.name" class="form-control" required />
      </div>
      <div class="form-group" ng-class="{'has-error': !companyForm.name.$valid}">
        <label for="budget">Budget</label>
        <input type="text" name="budget" ng-model="compCtrl.budget" class="form-control" required />
      </div>
      <div class="actions">
        <a ng-href="#companies" class="btn btn-default">Back</a>
        <div class="pull-right">
          <button class="btn btn-primary" ng-click="compCtrl.create()" ng-disabled="!companyForm.$valid">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>